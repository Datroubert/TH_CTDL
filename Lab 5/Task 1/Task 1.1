public static int[][] add(int[][] a, int[][] b, int size) {
		int i, j;
        int c[][] = new int[size][size];
 
        for (i = 0; i < size; i++)
            for (j = 0; j < size; j++)
                c[i][j] = a[i][j] + b[i][j];
 
        return c;
    }
	
